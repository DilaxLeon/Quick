# Hugging Face token for pyannote.audio speaker diarization
HF_TOKEN=your huggingface token

# Cloudflare R2 Storage Configuration
# Enable R2 storage (set to 'true' to enable, 'false' to use local storage)
USE_R2_STORAGE=true

# R2 Connection Details
# Your Cloudflare R2 endpoint URL (e.g., https://your-account-id.r2.cloudflarestorage.com)
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# R2 API credentials (get these from Cloudflare dashboard > R2 > Manage R2 API tokens)
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key

# R2 bucket name where videos will be stored
R2_VIDEO_BUCKET=quickcap-videos

# Public URL for accessing R2 files (your R2 custom domain or public bucket URL)
# Example: https://videos.yourdomain.com or https://pub-xxxxx.r2.dev
R2_PUBLIC_URL=https://your-r2-public-url.r2.dev
